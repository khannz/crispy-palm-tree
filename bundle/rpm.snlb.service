[Unit]
Description=Software network load balancer service
ConditionPathExists=/opt/snlb/snlb
After=network.target

[Service]
Type=simple
User=root
Group=root
LimitNOFILE=1024
Restart=on-failure
RestartSec=10
WorkingDirectory=/opt/snlb
ExecStartPre=mkdir -p /run/snlb
ExecStart=/opt/snlb/snlb run
KillSignal=SIGINT
SendSIGKILL=no
PermissionsStartOnly=true
[Install]
WantedBy=multi-user.target